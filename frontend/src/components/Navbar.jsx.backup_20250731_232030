  // è·¯ç”±è®ŠåŒ–æ™‚é—œé–‰æ‰‹æ©Ÿé¸å–®
  useEffect(() => {
    setIsMobileMenuOpen(false);
  }, [location.pathname]);

  // IBS å‹•ç•«é‚è¼¯
  useEffect(() => {
    if (disclaimerAccepted && !showIBSAnimation) {
